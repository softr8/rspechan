= form_for([@organization, @project], html: {class: 'well form-horizontal'}) do |f|
  - if @project.errors.any?
    #error_explanation
      %h2
        = pluralize(@project.errors.count, "error")
        prohibited this project from being saved:
      %ul
        - @project.errors.full_messages.each do |msg|
          %li= msg
  .field
    = f.label :name
    %br/
    = f.text_field :name
  .field
    = f.label :repo
    %br/
    = f.text_field :repo
  .field
    = f.label :branch
    %br/
    = f.text_field :branch
  .field
    = f.label :test_type
    %br/
    = f.select :test_type, {:rspec => 'Rspec', :cucumber => 'Cucumber'}
  .field
    = f.label :pattern
    %br/
    = f.text_field :pattern
  .field
    = f.label :description
    %br/
    = f.text_area :description
  .field
    = f.label :ruby_version
    %br/
    = f.select :ruby_id, options_for_select(Ruby.availables.collect {|ruby| [ruby.name, ruby.id]})
  .actions
    = f.submit