%h1 Listing projects
%table
  %tr
    %th Name
    %th Repo
    %th Description
    %th Ruby version
    %th
    %th
    %th
  - @projects.each do |project|
    %tr
      %td= project.name
      %td= project.repo
      %td= project.description
      %td= project.ruby_version
      %td= link_to 'Show', project
      %td= link_to 'Edit', edit_project_path(project)
      %td= link_to 'Destroy', project, confirm: 'Are you sure?', method: :delete
%br/
